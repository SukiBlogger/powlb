<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= config.title %></title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
        <h1><%= config.title %></h1>
    </header>
    <div class="container">
        <% page.posts.data.forEach(function(post){ %>
            <h2 class="post-title"><a href="<%= url_for(post.path) %>"><%= post.title %></a></h2>
            <p><%= post.excerpt %></p>
        <% }); %>
    </div>
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> <%= config.author %></p>
    </footer>
</body>
</html>
